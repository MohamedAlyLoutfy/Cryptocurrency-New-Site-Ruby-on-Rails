<h4>SAMPLES OF Cryptocurrencies, Please search on any other Cryptocurrencies</h4>
<table class="table table-sm table-striped table-bordered table-hover">
  <thead class="thead-light">
  <tr>
  <th scope="col">Name</th>
  <th scope="col">Price</th>
  <th scope="col">24hr High</th>
  <th scope="col">24hr Low</th>
  <th scope="col">Market Cap</th>
</tr>
</thead>
<tbody>
    <% @prices["DISPLAY"].each do |key, value| %>
     
    

    <tr>
      <td scope="col"><%= key  %></td>
      <td scope="col"><%= value["USD"]["PRICE"] %></td>
      <td scope="col"><%= value["USD"]["HIGHDAY"] %></td>
      <td scope="col"><%= value["USD"]["LOWDAY"] %></td>
      <td scope="col"><%= value["USD"]["MKTCAP"] %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br/>
<h4>Latest News</h4>






<div class="container">
<div class="row">
<% for x in @news["Data"] %>
<div class="col-sm">

<div class="card" style="width: 18rem;">
<img src="<%= x["imageurl"]%>" class="card-img-top" alt="<%= x["source"]%>">
<div class="card-body">
  <h5 class="card-title"> <%= x["title"] %> </h5>
  <p class="card-text"><%= x["body"] %></p>
  <a href="<%= x["url"]%>" class="btn btn-secondary">Read More...</a>
</div>
</div>
<br/>
</div>
<% end %>

</div>
</div>